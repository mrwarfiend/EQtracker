@model EQtrack.Models.inventory

@{
    ViewData["Title"] = "CheckoutFunc";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<h1>Checkout Item</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Tool
        </dt>
        <dd class = "col-sm-10">
            @ViewData["tool"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckoutFunction" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            @Html.HiddenFor(model => model.name)
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.toolID)
            @Html.HiddenFor(model => model.Count)
            @Html.HiddenFor(model => model.flag)
            <div class="form-group">
                <input onclick="message()" type="submit" value="Checkout One" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Checkout">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

        <script>
function message() {
    if (@Model.Count > 0) {
        alert("Your ticket has been generated!");

    } else {
        alert("No tool available")
    }
}
</script>